<%- include('../partials/head', { title: 'About', navLinks, currentPath }) %>

  <div class="wrapper">
    <section class="section" id="about">
      <div class="section-head">
        <div>
          <div class="pill">About</div>
          <h2>Meet DJ HEX</h2>
        </div>
      </div>
      <div class="about-grid">
        <div class="photo-placeholder">About Photo Placeholder</div>
        <div class="card">
          <h3>Professional intro</h3>
          <p>I’m DJ HEX—your go-to music architect for weddings, clubs, and bespoke events. From baraat beats to high-energy festival drops, I craft immersive sets that keep guests engaged and dance floors packed. Expect meticulous planning, clean setups, and seamless mixing tailored to your vibe.</p>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="section-head">
        <div>
          <div class="pill">What I Do For You</div>
          <h2>From ceremony cues to after-party peaks</h2>
        </div>
      </div>
      <div class="card">
        <h3>Wedding Services</h3>
        <div class="list-grid">
          <% whatIDo.weddingServices.forEach(item => { %>
            <div class="pill-item"><%= item %></div>
          <% }) %>
        </div>
      </div>
      <div class="card" style="margin-top:16px;">
        <h3>Professional Setup</h3>
        <div class="list-grid">
          <% whatIDo.professionalSetup.forEach(item => { %>
            <div class="pill-item"><%= item %></div>
          <% }) %>
        </div>
      </div>
      <div class="card" style="margin-top:16px;">
        <h3>Music Expertise</h3>
        <div class="list-grid">
          <% whatIDo.musicExpertise.forEach(item => { %>
            <div class="pill-item"><%= item %></div>
          <% }) %>
        </div>
      </div>
      <div class="card" style="margin-top:16px;">
        <h3>Event Management</h3>
        <div class="list-grid">
          <% whatIDo.eventManagement.forEach(item => { %>
            <div class="pill-item"><%= item %></div>
          <% }) %>
        </div>
      </div>
      <div class="card" style="margin-top:16px;">
        <h3>Special Features</h3>
        <div class="list-grid">
          <% whatIDo.specialFeatures.forEach(item => { %>
            <div class="pill-item"><%= item %></div>
          <% }) %>
        </div>
      </div>
      <div class="card" style="margin-top:16px;">
        <h3>What You Get</h3>
        <div class="list-grid">
          <% whatIDo.whatYouGet.forEach(item => { %>
            <div class="pill-item"><%= item %></div>
          <% }) %>
        </div>
      </div>
    </section>
  </div>

