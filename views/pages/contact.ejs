<%- include('../partials/head', { title: 'Contact', navLinks, currentPath }) %>

  <div class="wrapper">
    <section class="section" id="contact">
      <div class="section-head">
        <div>
          <div class="pill">Contact</div>
          <h2>Letâ€™s plan your event</h2>
        </div>
      </div>
      <div class="contact">
        <div class="contact-card">
          <form>
            <div>
              <label>Name</label>
              <input type="text" placeholder="Your full name">
            </div>
            <div>
              <label>Email</label>
              <input type="email" value="<%= email %>" readonly>
            </div>
            <div>
              <label>Phone</label>
              <input type="tel" placeholder="Contact number">
            </div>
            <div>
              <label>Event date</label>
              <input type="date">
            </div>
            <div>
              <label>Event type</label>
              <select>
                <option>Wedding / Engagement</option>
                <option>Club / Festival</option>
                <option>Corporate / Private</option>
                <option>Birthday / Graduation</option>
                <option>Anniversary</option>
                <option>Baby Shower</option>
                <option>Sports / Tournament</option>
                <option>Product Launch</option>
                <option>Other</option>
              </select>
            </div>
            <div>
              <label>Message</label>
              <textarea placeholder="Tell me about your event, vibe, and any must-play songs."></textarea>
            </div>
            <button type="button" class="submit">Submit</button>
          </form>
        </div>
        <div class="contact-card">
          <div class="contact-info">
            <div class="row">
              <strong>Email:</strong> <%= email %>
            </div>
            <div class="row">
              <strong>Phone:</strong> Add your preferred number
            </div>
            <div class="row">
              <strong>Location:</strong> Available for travel across India & destinations
            </div>
            <div class="row">
              <strong>Follow:</strong>
              <div class="social">
                <a href="#" aria-label="Instagram">IG</a>
                <a href="#" aria-label="YouTube">YT</a>
                <a href="#" aria-label="Spotify">SP</a>
                <a href="#" aria-label="SoundCloud">SC</a>
              </div>
            </div>
            <div class="row">
              <strong>Why book DJ HEX?</strong>
              <p style="margin:6px 0 0;color:var(--muted);">Crowd-tuned sets, reliable timelines, pristine audio, and immersive lighting that elevate every celebration.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

<%- include('../partials/footer', { year }) %>

