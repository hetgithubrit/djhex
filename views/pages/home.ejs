<%- include('../partials/head', { title: 'Home', navLinks, currentPath }) %>

  <div class="wrapper">
    <section class="hero section" id="home">
      <div>
        <div class="pill">DJ / Music Curator / Live Mixer</div>
        <h1>Where Music Meets Magic</h1>
        <p>Transforming every event into an unforgettable experience with the perfect blend of beats, energy, and atmosphere.</p>
        <div class="hero-buttons">
          <a class="cta" href="/contact">Contact Us for Booking</a>
          <a class="btn-secondary" href="/services">Learn More About Services</a>
        </div>
        <div class="stats">
          <div class="stat-card">
            <h3 data-count="250">0</h3>
            <span>Events Completed</span>
          </div>
          <div class="stat-card">
            <h3 data-count="5">0</h3>
            <span>Years Experience</span>
          </div>
          <div class="stat-card">
            <h3 data-count="100" data-percent="true">0%</h3>
            <span>Satisfaction Rate</span>
          </div>
        </div>
      </div>
      <div class="hero-img">
        <div class="placeholder">Hero Image Placeholder</div>
      </div>
    </section>

    <section class="section" id="reviews">
      <div class="section-head">
        <div>
          <div class="pill">Google Reviews</div>
          <h2>Clients who vibed with DJ HEX</h2>
        </div>
        <a class="btn-secondary" href="/reviews">See all reviews</a>
      </div>
      <div class="reviews">
        <div class="review-track">
          <% reviews.forEach(r => { %>
            <div class="review">
              <header>
                <div class="face"><%= r.initials %></div>
                <div>
                  <h4><%= r.name %></h4>
                  <div class="stars">★★★★★</div>
                </div>
              </header>
              <p><%= r.text %></p>
            </div>
          <% }) %>
        </div>
      </div>
    </section>

    <section class="section" id="services">
      <div class="section-head">
        <div>
          <div class="pill">Services</div>
          <h2>Tailored sound for every moment</h2>
        </div>
        <a class="btn-secondary" href="/services">View all services</a>
      </div>
      <div class="services-grid">
        <% services.slice(0,3).forEach(service => { %>
          <div class="service">
            <div class="image">Service Image Placeholder</div>
            <div class="body">
              <h4><%= service.title %></h4>
              <p><%= service.desc %></p>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <section class="section" id="gallery">
      <div class="section-head">
        <div>
          <div class="pill">Gallery</div>
          <h2>Moments & vibes</h2>
        </div>
        <a class="btn-secondary" href="/gallery">Open gallery</a>
      </div>
      <div class="gallery-grid">
        <% galleryItems.slice(0,6).forEach(item => { %>
          <div class="gallery-item"><%= item.title %></div>
        <% }) %>
      </div>
    </section>
  </div>

<%- include('../partials/footer', { year }) %>

